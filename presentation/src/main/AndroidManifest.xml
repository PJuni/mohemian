<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.mohemian">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="app.mohemian.MainApp"
        android:allowBackup="true"
        android:icon="@drawable/vector_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/vector_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mohemian">
        <activity
            android:name="app.mohemian.ui.activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Mohemian.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>